<Window x:Class="HarmoniX_View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HarmoniX_View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <Button Name="BrowseButton" Content="Browse and Upload Song" Width="200" Height="30" Click="BrowseButton_Click" />
            <ListBox Name="SongsListBox" Width="400" Height="200" Margin="0,20,0,0" DisplayMemberPath="SongMedia" />
            <Button Name="PlayButton" Content="Play Selected Song" Width="200" Height="30" Click="PlayButton_Click" />
        </StackPanel>
    </Grid>
</Window>
